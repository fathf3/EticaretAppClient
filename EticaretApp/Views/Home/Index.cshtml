@model GetAllProduct 

@{
    ViewData["Title"] = "Home Page";
}



<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>


    <section id="clothing" class="my-5 overflow-hidden">
        <div class="container pb-5">

            <div class="section-header d-md-flex justify-content-between align-items-center mb-3">
                <h2 class="display-3 fw-normal">Best Selller bunnnlar !!! </h2>
                <div>
                    <a href="#" class="btn btn-outline-dark btn-lg text-uppercase fs-6 rounded-1">
                        shop now
                        <svg width="24" height="24" viewBox="0 0 24 24" class="mb-1">
                            <use xlink:href="#arrow-right"></use>
                        </svg>
                    </a>
                </div>
            </div>

            <div class="products-carousel swiper swiper-initialized swiper-horizontal swiper-backface-hidden">
                <div class="swiper-wrapper" id="swiper-wrapper-ffcc14e51dac37d1" aria-live="polite">
                    @foreach(var product in Model.Products)
                    {
                        
                    
                    <div class="swiper-slide" role="group" aria-label="6 / 6" style="width: 301.5px; margin-right: 30px;">
                    
                        <div class="card position-relative">

                                @foreach(var image in product.Images)
                                {

                                    if (image.Showcase)
                                    {
                                        <a href="/Product/GetProduct/@product.Id"><img src="@image.Path" class="img-fluid rounded-4" alt="image"></a>
                                    }
                                    
                                }
                            <div class="card-body p-0">
                                    <a href="/Product/GetProduct/@product.Id">
                                    <h3 class="card-title pt-4 m-0">@product.Name</h3>
                                </a>

                                <div class="card-text">
                                    <span class="rating secondary-font">
                                        <iconify-icon icon="clarity:star-solid" class="text-primary"></iconify-icon>
                                        <iconify-icon icon="clarity:star-solid" class="text-primary"></iconify-icon>
                                        <iconify-icon icon="clarity:star-solid" class="text-primary"></iconify-icon>
                                        <iconify-icon icon="clarity:star-solid" class="text-primary"></iconify-icon>
                                        <iconify-icon icon="clarity:star-solid" class="text-primary"></iconify-icon>
                                        5.0
                                    </span>

                                    <h3 class="secondary-font text-primary">@product.Price ₺</h3>

                                    <div class="d-flex flex-wrap mt-3">
                                           
                                                @if (User.Claims.Any())
                                                {

                                                    <form asp-action="AddItemToBasket" asp-controller="Basket" method="post">
                                                        <input type="hidden" name="productId" value="@product.Id" />
                                                    <button class="btn btn-primary me-3 px-4 pt-3 pb-3" type="submit">Sepete Ekle</button>
                                                    </form>
                                                }
                                                else
                                                {
                                                <a class="btn-cart me-3 px-4 pt-3 pb-3" href="/Auth/Login">
                                                    <h6 class="text-uppercase m-0" >
                                                    Giriş Yap
                                                    </h6>
                                                    </a>
                                                }
                                        
                                        <a href="#" class="btn-wishlist px-4 pt-3 ">
                                            <iconify-icon icon="fluent:heart-28-filled" class="fs-5"></iconify-icon>
                                        </a>
                                    </div>


                                </div>

                            </div>
                        </div>
                    </div>
                    }
                </div>
                <span class="swiper-notification" aria-live="assertive" aria-atomic="true"></span>
            </div>
            <!-- / products-carousel -->


        </div>
    </section>





</div>
