<!DOCTYPE html>
<html lang="en">
@await Component.InvokeAsync("Admin_HeaderPartialComponent")
  <body>
    <div class="wrapper">
      <!-- Sidebar -->
        @await Component.InvokeAsync("Admin_SideBarPartialComponent")
      <!-- End Sidebar -->

      <div class="main-panel">
        <div class="main-header">
          <div class="main-header-logo">
            <!-- Logo Header -->
            <div class="logo-header" data-background-color="dark">
              <a href="index.html" class="logo">
                <img src="~/admin-template/assets/img/kaiadmin/logo_light.svg"
                  alt="navbar brand"
                  class="navbar-brand"
                  height="20"
                />
              </a>
              <div class="nav-toggle">
                <button class="btn btn-toggle toggle-sidebar">
                  <i class="gg-menu-right"></i>
                </button>
                <button class="btn btn-toggle sidenav-toggler">
                  <i class="gg-menu-left"></i>
                </button>
              </div>
              <button class="topbar-toggler more">
                <i class="gg-more-vertical-alt"></i>
              </button>
            </div>
            <!-- End Logo Header -->
          </div>
          <!-- Navbar Header -->
                @await Component.InvokeAsync("Admin_NavbarPartialComponent")
      
      
          <!-- End Navbar -->
        </div>

        <div class="container">
          <div class="page-inner">
                   
            @RenderBody()
            
          </div>
        </div>

            @await Component.InvokeAsync("Admin_FooterPartialComponent")
      </div>

     
    </div>

    @await Component.InvokeAsync("Admin_ScriptsPartialComponent")
    @await RenderSectionAsync("Scripts", required: false)
  </body>
</html>
