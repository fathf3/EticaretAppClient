@model CreateProduct

@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="page-inner">
    
        <form asp-action="AddProduct" asp-controller="Products" asp-area="Admin" enctype="multipart/form-data">
            <div class="form-group">
                <label for="exampleInputEmail1">Ürün Adı</label>
                <input asp-for="Name" type="text" class="form-control" placeholder="Ürün Adı" required>

            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Fiyatı</label>
                <input asp-for="Price" type="number" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Fiyatı" required>
                
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Stok Adedi</label>
                <input asp-for="Stock" type="number" class="form-control" id="exampleInputPassword1" placeholder="Stoke adedi" required>
            </div>
           
          
            <button type="submit" class="btn btn-primary">Yeni Ürün Oluştur</button>
        </form>

    </div>
</div>

